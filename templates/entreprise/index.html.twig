{% extends 'base.html.twig' %}

{% block title %}Liste des entreprises{% endblock %}

{% block body %}

    <h1>Liste des entreprises ({{ entreprises | length }})</h1>
    <a class="uk-button uk-button-primary" href="{{ path('add_entreprise') }}">Ajouter entreprise</a> <br>

    <table class="uk-table uk-table-striped uk-table-middle uk-text-center">
        <thead>
            <tr>
                <th class="uk-text-center">Entreprise</th>
                <th class="uk-text-center">Adresse</th>
                <th class="uk-text-center">Date de crÃ©ation</th>
                <th class="uk-text-center">Supprimer</th>
                <th class="uk-text-center">Modifier</th>
            </tr>
        </thead>
        <tbody>
            {% for entreprise in entreprises %}
            <tr>
                <td><a href="{{ path('show_entreprise', {'id': entreprise.id }) }}">{{ entreprise }}</a></td>
                <td>{{ entreprise.AdresseComplet }}</td>
                <td>{{ entreprise.DateCreation | date('d/m/Y') }}</td>
                <td><a uk-icon="icon: close" href="{{ path('del_entreprise', {'id': entreprise.id }) }}"></a></td>
                <td><a uk-icon="icon: pencil" href="{{ path('update_entreprise', {'id': entreprise.id }) }}"></a></td>
            </tr>
        {% endfor %}

        </tbody>
    </table>


{% endblock %}
